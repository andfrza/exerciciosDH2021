<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentoDeIntroducao1">

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="100dp"
        android:background="@drawable/ic_ilustra2"/>
    <TextView
        android:id="@+id/titulo"
        app:layout_constraintTop_toBottomOf="@+id/imagem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:text="Chefs ilustres"/>
    <TextView
        android:id="@+id/descricao"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintLeft_toLeftOf="@id/imagem"
        app:layout_constraintRight_toRightOf="@id/imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Experimente os melhores pratos!"/>

</androidx.constraintlayout.widget.ConstraintLayout>