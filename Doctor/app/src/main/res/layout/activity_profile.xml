<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_profile_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_360dp"
        app:layout_constraintVertical_bias="0.501"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_360dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="360dp"/>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_profile_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:background="@color/white"
            android:drawableStart="@drawable/ic_chevron_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/activity_profile_screen_title"
        app:layout_constraintTop_toBottomOf="@id/activity_profile_screen_toolbar"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="@string/activity_profile_screen_title"/>
    <TextView
        android:id="@+id/activity_profile_screen_subtitle"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_profile_screen_title"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/activity_profile_screen_subtitle"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_profile_screen_subtitle"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@mipmap/ic_launcher"/>


</androidx.constraintlayout.widget.ConstraintLayout>